# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///granula.db

# Email Configuration (Gmail example)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=hello@granula.app

# For development: set to true to suppress actual email sending
MAIL_SUPPRESS_SEND=true

# Admin Configuration
ADMIN_EMAIL=admin@granula.app
SUPPORT_EMAIL=support@granula.app

# URLs
BASE_URL=https://granula.app
FRONTEND_URL=http://localhost:3000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis (optional - for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0